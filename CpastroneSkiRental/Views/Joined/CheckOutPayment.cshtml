@model CpastroneSkiRental.Models.JoinedClass
@{
    ViewData["Title"] = "CheckOutPayPal";
}

<h1>Check Out Summary:</h1>

<div class="row">

    <div class="col-md-4">

        <div class="form-row">
            <div class="col-md-5 mb-3">
                <text>
                    Item Id:
                </text>
            </div>
            <div class="col-md-7 mb-3">
                <text>
                    @ViewBag.ItemId
                </text>
            </div>
        </div>
        <div class="form-row">
            <div class="col-md-5 mb-3">
                <text>
                    Item Description:
                </text>
            </div>
            <div class="col-md-7 mb-3">
                <text>
                    @ViewBag.ItemDes
                </text>
            </div>
        </div>
        <div class="form-row">
            <div class="col-md-5 mb-3">
                <text>
                    User Id
                </text>
            </div>
            <div class="col-md-7 mb-3">
                <text>
                    @ViewBag.UserId
                </text>
            </div>
        </div>
        <div class="form-row">
            <div class="col-md-5 mb-3">
                <text>
                    User Name:
                </text>
            </div>
            <div class="col-md-7 mb-3">
                <text>
                    @ViewBag.UserName
                </text>
            </div>
        </div>
        <div class="form-row">
            <div class="col-md-5 mb-3">
                <text>
                    Rent Start:
                </text>
            </div>
            <div class="col-md-7 mb-3">
                <text>
                    @ViewBag.StartDate
                </text>
            </div>
        </div>
        <div class="form-row">
            <div class="col-md-5 mb-3">
                <text>
                    Return Date:
                </text>
            </div>
            <div class="col-md-7 mb-3">
                <text>
                    @ViewBag.EndRent
                </text>
            </div>
        </div>
        <div class="form-row">
            <div class="col-md-5 mb-3">
                <text>
                    Total Days:
                </text>
            </div>
            <div class="col-md-7 mb-3">
                <text>
                    @ViewBag.totalDays
                </text>
            </div>
        </div>

        <form asp-controller="Items" asp-action="CheckOut">

            <input type="submit" value="checkout" class="btn btn-danger" /> |
            <a asp-action="ProductsDisplay">Back to List</a>
        </form>
        <a asp-controller="Items" asp-action="Index">Back to Products</a>


    </div>
</div>


